
    <div id="token-backdrop" >
<div class="token-header">
            <h3>Token Menu</h3>
            <button type="button" class="token-close" id="token-close">&times;</button>
        </div>
        <button id="token-submit">Submit</button>
        <div class="token-body">
            <div class="token-main">
                <div class="token-name">
                    <label for="token-name-input">{{TokenName}}</label>
                    <input type="text" id="token-name-input">
                </div>

                <div class="token-nickname">
                    <label for="token-nickname-input">{{TokenNickname}}</label>
                    <input type="text" id="token-nickname-input">
                </div>
                
            </div>
            <div class="description">
                <label for="token-description-input">{{TokenDescription}}</label>
                <textarea id="token-description-input"></textarea>
            </div>
            <div id="bars">
                <div class="bar1">
                    <div class="bar-header">
                        <input type="color" id="bar1color" name="bar1color" value="#13eb48">
                        <h3>Bar 1</h3>
                        
                    </div>
                    <input type="number" id="bar1-current">
                    <label for="bar1-max">/</label>
                    <input type="number" id="bar1-max">
                    
                </div>
                <div class="bar2">
                    <div class="bar-header">
                        <input type="color" id="bar2color" name="bar2color" value="#136ceb">
                        <h3>Bar 2</h3>
                       
                    </div>
                    <input type="number" id="bar2-current">
                    <label for="bar2-max">/</label>
                    <input type="number" id="bar2-max">
                    
                </div>
                <div class="bar3">
                    <div class="bar-header">
                        <input type="color" id="bar3color" name="bar3color" value="#eb133a">
                        <h3>Bar 3</h3>
                        
                    </div>
                    <input type="number" id="bar3-current">
                    <label for="bar3-max">/</label>
                    <input type="number" id="bar3-max">
                   
                </div>
               


            </div>
        </div>
</div>